@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row">
        <!-- Thông tin đặt hàng -->
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-info text-white">
                    <h4>Thông tin đặt hàng</h4>
                </div>
                <div class="card-body">
                    <form class="form-horizontal" method="post" action="">
                        <div class="form-group mb-3">
                            <label for="first_name" class="form-label">Họ và Tên:</label>
                            <input type="text" name="FirstName" class="form-control" placeholder="Nhập họ tên của bạn" />
                        </div>
                        <div class="form-group mb-3">
                            <label for="phone_number" class="form-label">Số điện thoại:</label>
                            <input type="text" name="PhoneNumber" class="form-control" placeholder="Nhập số điện thoại của bạn" />
                        </div>
                        <div class="form-group mb-3">
                            <label for="email_address" class="form-label">Email:</label>
                            <input type="email" name="EmailAddress" class="form-control" placeholder="Theo dõi đơn hàng sẽ được gửi qua Email" />
                        </div>
                        <div class="form-group mb-3">
                            <label for="address" class="form-label">Địa chỉ:</label>
                            <input type="text" name="Address" class="form-control" placeholder="Địa chỉ (ví dụ: 103 Vạn Phúc, phường Vạn Phúc)" />
                        </div>
                        <div class="form-group mb-3">
                            <label for="notes" class="form-label">Ghi chú:</label>
                            <input type="text" name="Notes" class="form-control" placeholder="Ghi chú thêm (Ví dụ: Giao hàng giờ hành chính)" />
                        </div>

                        <h5 class="mt-4">Phương thức thanh toán</h5>
                        <div class="form-check mb-3 p-2 border rounded payment-option">
                            <input type="radio" class="form-check-input" name="PaymentMethod" value="Cash" id="paymentCash" required>
                            <label class="form-check-label ms-2" for="paymentCash">Thanh toán khi nhận hàng</label>
                        </div>
                        <div class="form-check mb-3 p-2 border rounded payment-option">
                            <input type="radio" class="form-check-input" name="PaymentMethod" value="QR" id="paymentQR">
                            <label class="form-check-label ms-2" for="paymentQR">Quét mã QR để thanh toán</label>
                        </div>
                        <input type="hidden" id="cartItems" name="CartItems" value="">
                        <input type="hidden" id="totalPrice" name="TotalPrice" value="">
                        <button type="submit" class="btn btn-primary w-100">Đặt hàng</button>
                    </form>
                </div>
            </div>
        </div>

        <!-- Sản phẩm trong giỏ hàng -->
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-info text-white">
                    <h4>Sản phẩm trong giỏ hàng</h4>
                </div>
                <div class="card-body">
                    <ul id="checkout-cart-items" class="list-group">
                        <!-- Danh sách sản phẩm sẽ được cập nhật bởi JavaScript -->
                    </ul>
                    <p class="mt-3">Tổng giá trị: <span id="checkout-total-price">0đ</span></p>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .payment-option {
        cursor: pointer;
    }

        .payment-option:hover {
            border-color: #007bff;
            background-color: #f8f9fa;
        }

    .form-check-input:checked ~ .form-check-label::before {
        background-color: #007bff;
        border-color: #007bff;
    }
</style>

<script src="~/js/payment.js"></script>
<script src="~/js/cart.js"></script>

<script>
    // Hàm để cập nhật các giá trị ẩn
    function updateHiddenFields() {
        // Giả sử bạn có hàm lấy thông tin giỏ hàng và tổng giá trị
        var cartItems = getCartItems(); // Hàm này trả về mảng các sản phẩm trong giỏ hàng
        var totalPrice = getTotalPrice(); // Hàm này trả về tổng giá trị giỏ hàng

        document.getElementById("cartItems").value = JSON.stringify(cartItems);
        document.getElementById("totalPrice").value = totalPrice;
    }

    // Gọi hàm cập nhật các giá trị ẩn trước khi submit form
    document.querySelector("form").addEventListener("submit", updateHiddenFields);
</script>
