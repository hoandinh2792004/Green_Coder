<script>
    // JavaScript to toggle sound
    const video = document.getElementById('volunteerVideo');
    const soundButton = document.getElementById('soundToggleButton');

    soundButton.addEventListener('click', function () {
        if (video.muted) {
            video.muted = false;
            soundButton.textContent = '🔊 Tắt âm thanh';
        } else {
            video.muted = true;
            soundButton.textContent = '🔇 Bật âm thanh';
        }
    });

    // Function to switch videos
    function switchVideo(videoPath) {
        video.src = videoPath;
        video.load();
        video.play();
    }
</script>